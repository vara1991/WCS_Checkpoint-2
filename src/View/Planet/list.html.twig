{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
    <h1 class="col-12">All Planets</h1>
</div>
<div class="row">
    <ul class="list">
        {% for planet in planets %}
        <li>{{ planet.id }}. {{ planet.name }}</li>
        {% else %}
        <li>Nothing to display</li>
        {% endfor %}
    </ul>
</div>
<nav class="row">
    <a href="/beast/list">Check the beast</a>
    <a href="/movie/list">Check the movies</a>
</nav>
{% endblock %}
