{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">{{ beasts.name}} </h1>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="/beast/edit" class="float-right">Edit</a>
        </div>
    </div>
    <div class="row detail">
        <figure class="col-12 col-md-4">
            <img src="{{ beasts.picture }}" class="img-fluid"/>
        </figure>
        <div class="col-12 col-md-8">
            <p>Area : {{ beasts.area }}</p>
            <p>Size : {{ beasts.size }}</p>
            <p>Planet : {{planetMovie.planet_name}} </p>
            <p>Movie(s) :{{ planetMovie.movie_title }}</p>
        </div>
    </div>
    <a href="/beast/list">Back</a>
{% endblock %}
